# Production Environment Configuration
# Copy this to .env.production and fill in actual values
# DO NOT commit .env.production with real secrets

# Application Environment
NODE_ENV=production

# Server Configuration (use secure port like 8443 with reverse proxy)
PORT=8443

# JWT Configuration (REQUIRED - minimum 32 characters!)
# Generate strong keys: openssl rand -base64 32
JWT_SECRET=${REPLACE_WITH_STRONG_32_CHAR_SECRET}
REFRESH_SECRET=${REPLACE_WITH_STRONG_32_CHAR_SECRET}
JWT_EXPIRY=15m
REFRESH_EXPIRY=7d

# Password Security (10-15 recommended for production)
SALT_ROUNDS=12

# CORS Configuration (restrict to your frontend domains)
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=50
AUTH_RATE_LIMIT_MAX=3

# Security (enable all in production)
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_HTTPS_REDIRECT=true
MAX_REQUEST_SIZE=10kb

# Logging
LOG_LEVEL=warn

# Database (when migrating from in-memory)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=typescript_api
DB_USER=api_user
DB_PASSWORD=${REPLACE_WITH_DB_PASSWORD}

# Monitoring & Observability
SENTRY_DSN=${REPLACE_WITH_SENTRY_DSN}
DATADOG_API_KEY=${REPLACE_WITH_DATADOG_KEY}

# AWS (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${REPLACE_WITH_AWS_KEY}
AWS_SECRET_ACCESS_KEY=${REPLACE_WITH_AWS_SECRET}
